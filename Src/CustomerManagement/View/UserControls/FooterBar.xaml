<UserControl x:Class="CustomerManagement.View.UserControls.FooterBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerManagement.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid Background="Purple" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Version: " Foreground="White" FontWeight="Bold" Padding="10,2,0,0" />
        <TextBlock Text="{Binding VersionNumber}" Foreground="White" FontWeight="Bold" Padding="0,2,0,0" HorizontalAlignment="Right" />
        <TextBlock Grid.Column="2" Text="{Binding MachineName}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Padding="0,2,10,0" />
    </Grid>
</UserControl>
