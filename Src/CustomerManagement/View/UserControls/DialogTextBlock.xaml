<UserControl x:Class="CustomerManagement.View.UserControls.DialogTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerManagement.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <TextBlock HorizontalAlignment="Left" FontSize="16" Height="40" Padding="0,10,0,0" Margin="30,0,0,0" Text="{Binding Label}" />
    </Grid>
</UserControl>
