<UserControl x:Class="CustomerManagement.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerManagement.View.UserControls"
             mc:Ignorable="d" 
             d:Height="30" d:DesignWidth="1500">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" Background="Transparent" BorderThickness="0,0,0,2">
            <Menu Background="LightBlue" Height="30">
                <MenuItem Header="File" Height="30" FontSize="12">
                    <MenuItem Name="MenuItemOpen" Header="Open" Click="MenuItemOpen_Click" />
                    <MenuItem Name="MenuItemExit" Header="Exit" Click="MenuItemExit_Click"/>
                    <MenuItem Name="MenuItemLoadData" Header="Load Data" Click="MenuItemLoadData_Click" />
                </MenuItem>
                <MenuItem Header="Edit" FontSize="12">
                    <MenuItem Header="Undo" />
                    <MenuItem Header="Redo" />
                    <MenuItem Header="Copy" />
                    <MenuItem Header="Paste" />
                </MenuItem>
                <MenuItem Header="View" FontSize="12">
                    <MenuItem Header="Customers" />
                    <MenuItem Header="Products" />
                    <MenuItem Header="Subscriptions" />
                </MenuItem>
            </Menu>
        </Border>
    </Grid>
</UserControl>
