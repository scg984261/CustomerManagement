<Window x:Class="CustomerManagement.View.Windows.NewCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:CustomerManagement.View.UserControls"
        xmlns:local="clr-namespace:CustomerManagement.View.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="New Customer" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Height="40" Margin="15,0,0,0" Text="New Customer" VerticalAlignment="Center" FontSize="24" />
        <Rectangle Grid.Row="1" />

        <StackPanel Grid.Row="1">
            <userControls:DialogTextBlock Label="Company Name" />
            <userControls:DialogTextBlock Label="Business Contact" />
            <userControls:DialogTextBlock Label="Contact Number" />
            <userControls:DialogTextBlock Label="Email Address" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBox Height="40" FontSize="24" />
            <TextBox Height="40" FontSize="24" />
            <TextBox Height="40" FontSize="24" />
            <TextBox Height="40" FontSize="24" />
        </StackPanel>

        <Button Name="SaveButton" Grid.Row="2" Grid.Column="1" Width="100" Margin="10,0,0,0" HorizontalAlignment="Left" Content="Save" Click="SaveButton_Click"/>
    </Grid>
</Window>
