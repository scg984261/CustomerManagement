<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="FormTextBlock">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="0,10,0,0" />
        <Setter Property="Margin" Value="30,5,0,20" />
    </Style>
    <Style TargetType="TextBlock" x:Key="HeaderTextBlock">
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontWeight" Value="Heavy" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="WindowHeaderTextBlock">
        <Setter Property="Height" Value="40" />
        <Setter Property="Margin" Value="15,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style TargetType="TextBlock"  x:Key="TabTextBlock">
        <Setter Property="Height" Value="30" />
        <Setter Property="Padding" Value="12,7,7,7" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
    </Style>
</ResourceDictionary>