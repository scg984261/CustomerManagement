<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="HeaderTextBlock">
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontWeight" Value="Heavy" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock"  x:Key="TabTextBlock">
        <Setter Property="Height" Value="30" />
        <Setter Property="Padding" Value="12,7,7,7" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    
    <!-- Used for Customer and Service Details Headers -->
    <Style TargetType="TextBlock" x:Key="DetailsHeader">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="5" />
    </Style>
</ResourceDictionary>
